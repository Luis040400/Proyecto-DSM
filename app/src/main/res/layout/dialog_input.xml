<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Seleccione la cantidad de preguntas" />

        <Spinner
            android:id="@+id/spCantidadPreguntas"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:entries="@array/preguntas_cantidad"
            android:prompt="@string/select_questions" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Seleccione la cantidad de tiempo" />

        <Spinner
            android:id="@+id/spTiempo"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:entries="@array/tiempo_cantidad"
            android:prompt="@string/select_time" />

        <Button
            android:id="@+id/buttonAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>