<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3939"
    android:orientation="vertical"
    tools:context=".ExamActivity">

    <TextView
        android:id="@+id/tvExamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:gravity="center_horizontal"
        android:text="Examen Individual de DSM?"
        android:textColor="#FFFFFF"
        android:textSize="27dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="12dp"
        android:background="#FFF" />

    <TextView
        android:id="@+id/txtvCronometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="#FFF"
        android:gravity="right"
        android:text="00" />

    <LinearLayout
        android:id="@+id/containerPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta:"
            android:textColor="#FFF"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿Pregunta examen tal?"
            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:padding="10dp"
            android:background="#7facea"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerRespuesta"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/optionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 1"
                android:textColor="#FFF"
                android:textSize="20sp"/>
            <RadioButton android:id="@+id/optionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 2"
                android:textSize="20sp"
                android:textColor="#FFF"/>
            <RadioButton android:id="@+id/optionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 1"
                android:textColor="#FFF"
                android:textSize="20sp"/>
            <RadioButton android:id="@+id/optionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta 2"
                android:textSize="20sp"
                android:textColor="#FFF" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:gravity="right">
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="#263AAC"
            android:text="Siguiente"/>
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:background="#263AAC"
            android:text="Finalizar examen"/>
    </LinearLayout>
</LinearLayout>